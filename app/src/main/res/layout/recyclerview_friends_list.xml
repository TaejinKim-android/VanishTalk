<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/basic_chat_margin">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/add_friends_recycler_image"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/basic_chat_margin"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/add_friends_recycler_image"
            app:layout_constraintEnd_toStartOf="@id/add_friends_recycler_checkbox"
            android:text="이름"
            android:textSize="@dimen/basic_chat_text_size"
            android:id="@+id/add_friends_recycler_name"/>

    <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/add_friends_recycler_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/basic_chat_margin"
            android:layout_marginEnd="@dimen/basic_chat_margin"
            android:gravity="center_vertical"
            android:id="@+id/add_friends_recycler_checkbox"/>

</android.support.constraint.ConstraintLayout>